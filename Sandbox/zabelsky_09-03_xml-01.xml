<?xml version="1.0" encoding="UTF-8"?>
<root>
   <Gazpacho_Recipe>
       <Prep_time>25 minutes</Prep_time>
       <Yield>Serves 8</Yield>
       <Ingredient>
           <Name>Tomato</Name>
           <Amount>"pounds" 2</Amount>
           <Details>peeled and chopped</Details>
       </Ingredient>
       <Ingredient>
           <Name>Red Onion</Name>
           <Amount>1</Amount>
           <Details>Finely chopped</Details>
       </Ingredient>
       <Ingredient>
           <Name>Cucumber</Name>
           <Amount>1</Amount>
           <Details>Peeled, seeded, chopped</Details>
       </Ingredient>
       <Ingredient>
           <Name>Sweet Red Bell Pepper</Name>
           <Amount>"cup" 1 (about a cup)</Amount>
           <Details>seeded and chopped</Details>
       </Ingredient>
       <Ingredient>
           <Name>celery</Name>
           <Amount>"stalks" 2</Amount>
           <Details>chopped</Details>
       </Ingredient>
       <Ingredient>
           <Name>fresh parsley</Name>
           <Amount>"Tbsp" 1-2</Amount>
           <Details>chopped</Details>
       </Ingredient>
       <Ingredient>
           <Name>fresh chives</Name>
           <Amount>"Tbsp" 2</Amount>
           <Details>chopped</Details>
       </Ingredient>
       <Ingredient>
           <Name>garlic</Name>
           <Amount>"clove" 1 (about 1 tsp)</Amount>
           <Details>minced</Details>
       </Ingredient>
       <Ingredient>
           <Name>red wine vinegar</Name>
           <Amount>"cup" 1/4</Amount>
       </Ingredient>
       <Ingredient>
           <Name>olive oil</Name>
           <Amount>"cup" 1/4</Amount>
       </Ingredient>
       <Ingredient>
           <Name>freshly squeezed lemon juice</Name>
           <Amount>"tbsp" 1</Amount>
       </Ingredient>
       <Ingredient>
           <Name>sugar</Name>
           <Amount>"tsp" about 2</Amount>
       </Ingredient>
       <Ingredient>
           <Name>salt and pepper</Name>
           <Amount>until taste is desired</Amount>
       </Ingredient>
       <Ingredient>
           <Name>tabasco sauce</Name>
           <Amount>"drops" or until taste is desired</Amount>
       </Ingredient>
       <Ingredient>
           <Name>worcestershire sauce</Name>
           <Amount>"tsp" 1</Amount>
       </Ingredient>
       <Ingredient>
           <Name>tomato juice</Name>
           <Amount>"cups" 2</Amount>
       </Ingredient>
       <Method>
           <Step>place ingredients in a large bowl</Step>
           <Step>blend until desired in batches</Step>
           <Step>adjust seasonings to taste</Step>
           <Step>place in a container to store</Step>
           <Step>chill a few hours to allow flavors to blend</Step>
       </Method>
            
   </Gazpacho_Recipe>
    </root>
